<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/slide_select_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="滑动选择内容"
        android:textColor="#FFF"
        android:textSize="50sp" />

    <com.phodev.andtools.widget.SlideSelectView
        xmlns:app="http://schemas.android.com/apk/res/com.phodev.andtools"
        android:id="@+id/slide_select_view"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/slide_select_bg"
        android:paddingBottom="10dp"
        android:paddingTop="4dp"
        android:text="ABCDEFGHIJKLMNOPQRSTUVWXYZ#"
        android:textColor="#00F"
        app:min_line_interval="2dp" />

</FrameLayout>